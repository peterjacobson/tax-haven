<h1>Add product</h1>

<%= form_for :product, url: products_path do |f| %>
	<p>
		<%= f.label :name <%><br>
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.label :story <%><br>
		<%= f.text_area :story %>
	</p>
	<p>
		<%= f.label :cost <%><br>
		<%= f.text_field :cost %>
	</p>
	<p>
		<%= f.label :image_url <%><br>
		<%= f.text_field :image_url %>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>

<%= link_to('back', products_path) %>